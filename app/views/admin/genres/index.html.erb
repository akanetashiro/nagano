<%= form_with model :@genre do |f| %>
      <h2 class="mt-3">ジャンル一覧・追加</h2>
        <h6>ジャンル名</h6>
          <%= f.text_field :name, class: "form-control genre_name" %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>


  
<table class="table">
  <thead>
    <tr>
      <th scope="col">ジャンル名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する",  edit_admin_genre_path, class:"btn btn-sm btn-success" %></td>
    </tr>
  <% end %>
  </tbody>
</table>